@using Nothing.Nauta.App.Data

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-3 mb-n1" Color="Color.Warning" />
            Close Session Error
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">
            An error occurred while closing the connection. Do you want to close the connection anyway?
        </MudText>
        <MudText Typo="Typo.body2">
            If you press <b>Yes</b>, please note that you may need to reboot your router before opening a new session.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Cancel" StartIcon="@Icons.Material.Filled.Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Confirm" StartIcon="@Icons.Material.Filled.Check">Yes</MudButton>
    </DialogActions>
</MudDialog>
