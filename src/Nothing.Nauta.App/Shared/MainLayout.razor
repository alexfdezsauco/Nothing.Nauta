@inherits Nothing.Nauta.App.Components.LayoutComponentBase<Nothing.Nauta.App.ViewModels.Shared.MainLayoutViewModel>

@if (ViewModel is null)
{
    return;
}

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ViewModel?.DrawerToggle())" />
        <MudText Align="Align.Center" Typo="Typo.h6">Nauta Session</MudText>
        <MudSpacer />
        @if (ViewModel.IsSessionConnected)
        {
            <MudIcon Style="margin-right: 10px" Icon="@Icons.Material.Filled.SignalWifi4Bar" />
        }
        else
        {
            <MudIcon Style="margin-right: 10px" Icon="@Icons.Material.Filled.SignalWifiOff" />
        }
    </MudAppBar>
    <MudDrawer Elevation="1">
        <MudDrawerHeader>
        </MudDrawerHeader>
        @* <NavMenu /> *@
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" >
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>